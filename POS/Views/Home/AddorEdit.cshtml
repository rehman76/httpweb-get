@model  POS.Models.Customer
@{
    Layout = null;
    Html.EnableClientValidation(true);

}
@using (Html.BeginForm("AddorEdit", "Home", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CustomerId)
    <div class="form-group">
        @Html.LabelFor(model => model.CustomerName, new { @class = "control-label" })
        @Html.EditorFor(model => model.CustomerName, new { htmlattributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.CustomerName)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CustomerAddress, new { @class = "control-label" })
        @Html.EditorFor(model => model.CustomerAddress, new { htmlattributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.CustomerAddress)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Gender, new { @class = "control-label" })
        @Html.EditorFor(model => model.Gender, new { htmlattributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Gender)
    </div>
    <div class="form-group">
        <input type="submit" value="submit" class="btn btn-primary" />
        <input type="reset" value="reset" class="btn btn-warning" />
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
